# Токен бота від @BotFather
BOT_TOKEN=your_bot_token_here

# URL API EMS (коли буде готове)
EMS_API_URL=https://your-ems-api.example.com
EMS_API_KEY=optional_api_key

# Шлях до БД (відносно кореня проєкту)
DATABASE_PATH=./data/bot.db

# Часовий пояс для сповіщень (Europe/Kyiv, UTC, Europe/Warsaw тощо).
# Після 18:00 за цим часом у нагадуванні показується зміна на завтра.
TIMEZONE=Europe/Kyiv

# Адміни: telegram_id через кому — бачать Push-сповіщення, Панель, Ключі (дізнатися Id: @userinfobot)
ADMIN_IDS=1
