# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# URL API EMS (когда будет готов)
EMS_API_URL=https://your-ems-api.example.com
EMS_API_KEY=optional_api_key

# База данных (путь к файлу)
DATABASE_PATH=./data/bot.db

# Часовой пояс для расписания и оповещений (Europe/Kyiv, Europe/Moscow и т.д.)
# После 18:00 UTC в оповещении показывается смена на завтра
TIMEZONE=UTC

# Адміни (telegram_id через кому) — бачать кнопку «Push-сповіщення»
ADMIN_IDS=1